{
    "name": "Thor plugin",
    "description": "Thor plugin",
    "version": "1.0",
    "permissions": ["contextMenus",
                    "https://*/",
                    "http://*/",
                    "https://www.thorfc.com/api/translate/*",
                    "https://www.thorfc.com/api/*",
                    "storage"],
    "background": {
        "scripts": ["background.js"],
	   "persistent": false
    },
    "icons": {
        "24":"icon24.png",
        "128":"icon128.png"
    },
    "content_scripts": [{
	    "matches": ["<all_urls>"],
        "run_at": "document_end",
	    "css": ["content.css"],
	    "js": ["js/log4javascript.js", "js/core.js", "js/dom.js", "js/domrange.js", "js/rangy-position.js", "js/wrappedrange.js", "js/wrappedselection.js", "js/rangy-position.js", "content2.js"]
	}],
    "browser_action": {
	   "default_title": "ThorFC",
	   "default_popup": "browser_action/popup.html",
       "default_icon": "icon24.png"
    },
    "web_accessible_resources": ["icon24.png"] ,
    "manifest_version": 2
}
